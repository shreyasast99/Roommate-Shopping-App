<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".costActivity">

    <TextView
        android:id="@+id/costSettle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settling Costs" />

    <TextView
        android:id="@+id/totalCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total" />

    <TextView
        android:id="@+id/averageCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Average Cost per Roommate" />

    <Spinner
        android:id="@+id/spentByRoommate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/perRoommate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Individual Cost" />

    <Button
        android:id="@+id/settleTheCosts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settle Costs" />
</LinearLayout>